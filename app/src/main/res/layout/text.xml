<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/call_list"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="27.5dp"
            android:background="@drawable/round_bg_hui"
            android:gravity="center_vertical|right"
            android:paddingRight="9dp"
            android:text="呼叫列表"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/former"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="36.5dp"
            android:background="@drawable/pink_cycle"
            android:gravity="center"
            android:text="01"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/menuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/round_half_balck"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="10dp"
        android:text="加水"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/to_other"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/org_cycle"
            android:gravity="center"
            android:text="转移"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/complain"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/green_cycle"
            android:gravity="center"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="42dp"
            android:layout_marginTop="16dp"
            android:text="90"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>
